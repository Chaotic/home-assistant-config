---
#
# notify when a door opens
#
id: Door Open
alias: Door Opened
initial_state: 'on'
trigger:
  - platform: state
    entity_id: 
      - binary_sensor.lr_door
      - binary_sensor.patio_door
    to: 'on'
action:
- service: tts.google_say
  data_template:
    message: 'Hey!  someone opened the {{ trigger.from_state.name }}door! '
